@model BusTripDto

<h1>
    Otobüs Sefer Güncelleme
</h1>
<div class="row">

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @Html.Raw(ViewBag.ErrorMessage)
        </div>
    }

    <div class="col-12 col-sm-8 col-md-6 col-lg-4">

        <form method="post" asp-controller="BusTrip" asp-action="Update">
            @Html.HiddenFor(p=>p.Id)
            <div class="mb-2">
                <label asp-for="RouteId" class="form-label">Rota</label>
                <select asp-for="RouteId" asp-items="(SelectList)ViewBag.RouteSelectList" class="form-select">
                </select>
            </div>

            <div class="mb-2">
                <label asp-for="VehicleId" class="form-label">Araç</label>
                <select asp-for="VehicleId" asp-items="(SelectList)ViewBag.VehicleSelectList" class="form-select">
                </select>
            </div>

            <div class="mb-2">
                <label asp-for="Date" class="form-label">Tarih</label>
                <input type="datetime-local" asp-for="Date" class="form-control" />
            </div>

            <div class="mb-2">
                <label asp-for="Price" class="form-label">Fiyatı</label>
                <input type="text" asp-for="Price" class="form-control" />
            </div>

            <div class="mb-2 text-end">
                <button class="btn btn-outline-success">
                    Güncelle
                </button>
            </div>

        </form>

    </div>
</div>
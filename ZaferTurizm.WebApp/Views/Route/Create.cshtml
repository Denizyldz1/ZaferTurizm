@model RouteDto

<h1>
    Yeni Rota Oluştur
</h1>
<div class="row">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">

        <form method="post" asp-controller="Route" asp-action="Create">

            <div class="mb-2">
                <label class="form-label">Kalkış İli</label>
                <select asp-items="(SelectList)ViewBag.CitySelectList" id="departure-city" class="form-select" asp-for="DepartureId">
                    <option value="">İl Seçiniz</option>
                </select>
            </div>

            <div class="mb-2">
                <label class="form-label">Varış İli</label>
                <select asp-items="(SelectList)ViewBag.CitySelectList" id="arrival-city" class="form-select" asp-for="ArrivalId">
                    <option value="">İl Seçiniz</option>
                </select>
            </div>

            <div class="mb-2 text-end">
                <button class="btn btn-outline-danger">
                    Kaydet
                </button>
            </div>

        </form>

    </div>
</div>
